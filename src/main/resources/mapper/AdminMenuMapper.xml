<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.wj.dao.AdminMenuDao">
    <resultMap type="com.example.wj.pojo.AdminMenu" id="AdminMenumap">
        <id column="id" property="id"/>
        <result column="path" property="path"/>
        <result column="name" property="name"/>
        <result column="name_zh" property="nameZh"/>
        <result column="icon_cls" property="iconCls"/>
        <result column="component" property="component"/>
        <result column="parent_id" property="parentId"/>
    </resultMap>
    <select id="findAllById" parameterType="java.util.List" resultMap="AdminMenumap">
        select id, path, name, name_zh, icon_cls, component, parent_id from admin_menu
         where id in
        <foreach collection="list" item="id" open="(" close=")" separator="," >
             #{id}
        </foreach>

    </select>


</mapper>

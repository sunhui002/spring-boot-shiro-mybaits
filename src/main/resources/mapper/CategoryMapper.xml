<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.wj.dao.CategoryDao">
    <resultMap type="com.example.wj.pojo.Category" id="categorymap">
    <id column="cid" property="id"/>
    <result column="name" property="name"/>
    </resultMap>

    <select id="findAll"  resultMap="categorymap">
        select *  from category
    </select>

    <select id="findById" parameterType="Integer" resultType="com.example.wj.pojo.Category" >
        select *  from category
        where id = #{id}
    </select>
</mapper>
